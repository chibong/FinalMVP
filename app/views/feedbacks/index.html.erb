<h1>Feedbacks</h1>

<p><%= link_to 'Add a New Feedback', new_feedback_url %></p>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Comment</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @feedbacks.each do |feedback| %>
    <tr>
      <td><%= feedback.user_id %></td>
      <td><%= feedback.comment %></td>
  
      <td><%= link_to 'Show', feedback_url(feedback) %></td>
      <td><%= link_to 'Edit', edit_feedback_url(feedback) %></td>
      <td><%= link_to 'Destroy', feedback_url(feedback), method: 'delete', data: { confirm: "Do you really want to delete this feedback?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

